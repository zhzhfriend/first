            </td>
        </tr>
        <tr class="LocalItem">
            <th>@Html.LabelFor(m => m.Eq_OwnerCompanyId)
            </th>
            <td>@Html.DropDownListFor(m => m.Eq_OwnerCompanyId, ViewBag.OwnerCompanies as IList<SelectListItem>)
            </td>
            <td>@Html.ValidationMessageFor(m => m.Eq_OwnerCompanyId)
            </td>
        </tr>
        <tr class="LocalItem">
            <th>@Html.LabelFor(m => m.Eq_ProducerCompanyId)
            </th>
            <td>@Html.DropDownListFor(m => m.Eq_ProducerCompanyId, ViewBag.ProductCompanies as IList<SelectListItem>)
            </td>
            <td>@Html.ValidationMessageFor(m => m.Eq_ProducerCompanyId)
            </td>
        </tr>
        <tr class="ExternalItem">
