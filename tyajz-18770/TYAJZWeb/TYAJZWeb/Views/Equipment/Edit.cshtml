@model EquipmentEditModel
@{
    if (Model == null || Model.Id == 0)
    {
        ViewBag.Title = "新注册设备";
    }
    else
    {
        ViewBag.Title = "修改设备";
    }
}
@section CSS
{
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
}
@section JS
{
    <script src="@Url.Content("~/Scripts/Equipment.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
}
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <table width="100%">
        <tr>
            <th width="200">
                @Html.LabelFor(m => m.Eq_Name)
            </th>
            <td width="300">
                @Html.DropDownListFor(m => m.Eq_Name, ViewBag.Names as IList<SelectListItem>, "请选择", null)
            </td>
            <td>@Html.ValidationMessageFor(m => m.Eq_Name)
            </td>
        </tr>
        <tr>
            <th>
                设备属性
            </th>
            <td>
                <label>@Html.CheckBoxFor(m => m.IsLocal, new { @checked = "true" }) 本地设备</label>
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(m => m.Eq_Type)
            </th>
            <td>@Html.EditorFor(m => m.Eq_Type)
            </td>
            <td>@Html.ValidationMessageFor(m => m.Eq_Type)
            </td>
        </tr>
        <tr>
