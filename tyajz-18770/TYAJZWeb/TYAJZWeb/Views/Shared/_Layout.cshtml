<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/All.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/all.js")" type="text/javascript"></script>
    @RenderSection("CSS", false)
    @RenderSection("JS", false)
</head>
<body>
    <div id="Header">
        <div class="left">
            <span class="title">太原建筑安全监督管理站<br />
                特种设备管理系统</span> <span class="welcomeMessage">您好：<br />
                    今天是2012年7月23日 周一</span></div>
        <div class="right">
            <ul>
                <li>@Html.ActionLink("重新登陆", "Logout", "Home")</li><li>@Html.ActionLink("退出系统", "Logout", "Home")</li></ul>
        </div>
        <div class="ClearBoth">
        </div>
    </div>
    <div class="Main">
        <div class="LeftMenu">
            <div class="Top">
            </div>
            @Html.Partial("_LeftMenu")
            <div class="Bottom">
            </div>
        </div>
        <div class="Body">
            @RenderBody()
        </div>
    </div>
    <div id="Footer">
    </div>
</body>
</html>
