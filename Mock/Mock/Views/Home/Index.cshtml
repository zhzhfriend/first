@{
    ViewBag.Title = "Index";
}
@model Mock.Models.Entities.UserloginModel
@{
    ViewBag.Title = "管理系统";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Index.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<div style="left: 600px; position: absolute; top: 200px; font-size:xx-large;color:#00ff10">系统</div>
<body>
    <div class="Main">
        @using (Html.BeginForm())
        {
            <div class="LoginPanel">
                <table width="50%" align="center">
                    <tr>
                        <th width="72">
                            用户名
                        </th>
						<div class="editor-field">
                        <td>@Html.EditorFor(m => m.UserName)
                        </td>
						</div>
                    </tr>
                    <tr>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            密&nbsp;&nbsp;码
                        </th>
                        <td  type="Password">@Html.EditorFor(m => m.PassWord)
                        </td>
                    </tr>
                </table>
                <div class="Login">
                    <input type="submit" value="" />
                </div>
                <div class="ClearBoth">
                </div>
                <div class="ErrorMessage">
                    <ul>@Html.ValidationSummary()</ul>
                </div>
            </div>
        }
    </div>
</body>
</html>
